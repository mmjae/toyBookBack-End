<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toy.book.dao.UserDao">
	<select id="userList" resultType="java.util.HashMap">
		SELECT * FROM USERS ORDER BY ID
	</select>
	
	<delete id="delete" parameterType="java.util.List">
			DELETE FROM USERS
			<where>
				<foreach collection="list" item="item" open="" close="" separator="OR">
					ID=#{item}				
				</foreach>
			</where>
	</delete>
	<insert id="temporay" parameterType="java.util.HashMap">
		INSERT INTO TEMPORAY_USER VALUES(#{username},#{password},#{age},SYSDATE)
	</insert>
	<insert id="addUser" parameterType="java.util.HashMap">
		INSERT INTO USERS VALUES((SELECT NVL(MAX(ID)+1,0) FROM USERS),#{userName},#{password},#{age})
		<selectKey keyProperty="idnum" order="AFTER" resultType="int">
			SELECT (SELECT NVL(MAX(ID),0) FROM USERS) AS idnum FROM DUAL
		</selectKey>
	</insert>
	<select id="selectAddUser" parameterType="int" resultType="java.util.HashMap">
		SELECT * FROM USERS WHERE ID = #{userId}
	</select>
	
	
</mapper>